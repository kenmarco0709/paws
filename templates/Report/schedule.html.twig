{% extends 'content.html.twig' %}

{% block pageContent %}
    
    <div class="content-wrapper" style="min-height: 847px;">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">{{ page_title }}</h1>
                    </div>
                </div>
            </div>
        </div>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div  class="dataTables_wrapper dt-bootstrap4">
                                    <div class="row mb-3">
                                        <div class="col-8">
                                            <div class='container'>
                                                <div class='row'>
                                                    <label class="col-2">Schedule Type</label>
                                                    <div class="col-sm-4">
                                                        <input type="text" id="scheduleTypeDesc" class='form-control' />
                                                        <input type="hidden" id="scheduleType" class='form-control' />
                                                    </div>
                                                    <label class="col-1">Start Date</label>
                                                    <div class="col-sm-2">
                                                        <input type="text" id="startDate" class='form-control datepicker' />
                                                    </div>
                                                    <label class="col-1">End Date</label>
                                                    <div class="col-sm-2">
                                                        <input type="text" id="endDate" class='form-control datepicker' />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class='container'>
                                                <div class='row'>
                                                    <div class='col-8'>
                                                       <div class='container'>
                                                            <div class='row'>
                                                                <label class="col-4">Status</label>
                                                                <div class="col-8">
                                                                    <select id='status' class='form-control'>
                                                                        <option value='all'>All</option>
                                                                        {% for status in statuses %}
                                                                            <option value='{{ status }}'> {{status}}</option>
                                                                        {% endfor %}
                                                                    </select>
                                                                </div>
                                                            </div>
                                                       </div>
                                                    </div>
                                                    <div class='col-4'>
                                                        <div class='text-left'>
                                                            <a href="javascript:void(0);" class='btn btn-success btn-report' data-url="{{ path('report_schedule_csv')}}"> CSV</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    {% include 'js.html.twig' %}

    <script language="javascript">
        //<![CDATA[
            $(document).ready(function(){
                schedule.settings.scheduleTypeAjaxAutocompleteUrl = "{{ path('admission_type_autocomplete') }}";
                schedule.init();
            });
        //]]>
    </script>
{% endblock %}